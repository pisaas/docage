{
  "name": "tools-scripts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/scripts/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/scripts",
        "main": "tools/scripts/src/index.ts",
        "tsConfig": "tools/scripts/tsconfig.lib.json",
        "assets": ["tools/scripts/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["tools/scripts/**/*.ts", "tools/scripts/executors.json", "tools/scripts/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/scripts/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
