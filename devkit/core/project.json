{
  "name": "devkit-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "devkit/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/devkit/core",
        "main": "devkit/core/src/index.ts",
        "tsConfig": "devkit/core/tsconfig.lib.json",
        "assets": [
          "devkit/core/*.md",
          {
            "input": "./devkit/core/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./devkit/core/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./devkit/core",
            "glob": "generators.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "devkit/core/**/*.ts",
          "devkit/core/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "devkit/core/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
